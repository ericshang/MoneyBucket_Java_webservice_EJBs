<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>Servlets.IndexServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>Servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddTransactionServlet</servlet-name>
        <servlet-class>Servlets.AddTransactionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ShowAllTransaction</servlet-name>
        <servlet-class>Servlets.ShowAllTransaction</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InterestRateServlet</servlet-name>
        <servlet-class>Servlets.InterestRateServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalculatorServlet</servlet-name>
        <servlet-class>Servlets.CalculatorServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/IndexServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddTransactionServlet</servlet-name>
        <url-pattern>/AddTransaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowAllTransaction</servlet-name>
        <url-pattern>/ShowAllTransaction</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InterestRateServlet</servlet-name>
        <url-pattern>/InterestRateServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalculatorServlet</servlet-name>
        <url-pattern>/CalculatorServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
